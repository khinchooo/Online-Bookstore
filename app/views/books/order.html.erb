<div class="d-flex justify-content-center">
  <h1>Add Payment</h1>
</div>
<%= form_with scope: :do_order, url: create_checkout_path, local: true do |f| %>
  <div class="d-flex justify-content-center m-3">
    <%= image_tag("img/#{@book.id}.jpg", :alt=> "") %>
  </div>
  <table class="table d-flex justify-content-center">
    <tbody>
      <tr>
        <td>Book Title:</td>
        <td>
          <%= @book.book_title %>
            <%= f.hidden_field :book_id, value: @book[:id] %>
        </td>
      </tr>
      <td>Quantity:</td>
      <td>
        <%= @quantity %>
          <%= f.hidden_field :quantity, value: @quantity, required: true %>
      </td>
      </tr>
      </tr>
      <td>Delivery Fee:</td>
      <td>
        <% if @quantity.to_i> 2 %>
          FREE
          <% else %>
            <%= @book.delivery_fee %>
              <% end %>
      </td>
      </tr>
      <tr>
        <td>Total Amount:</td>
        <td class="bi bi-currency-yen">
          <%= @total_amount %>
            <%= f.hidden_field :total_amount, value: @total_amount %>
        </td>
      </tr>
      <tr>
        <td>Payment method:</td>
        <td>
          <%= f.select :payment_type, @payment,:prompt=> 'Add to Payment....' %>
        </td>
      </tr>
    </tbody>
  </table>
  <div class="d-flex justify-content-center m-3">
    <%= f.hidden_field :order_id, value: @book[:id] %>
    <%= f.hidden_field :delivery_time, value: @delivery_time %>
    <%= link_to "Back" , show_book_path, class: "btn btn-primary mx-3" %>
    <%= f.submit "Go to checkout" , class: "btn btn-primary" %>
  </div>
  <% end %>