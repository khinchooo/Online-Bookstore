<div class="d-flex justify-content-center">
  <h1>Add Payment</h1>
</div>
<%= form_with scope: :do_order, url: payment_path, local: true do |f| %>
  <div class="d-flex justify-content-center m-3">
    <%= image_tag("img/#{@book.id}.jpg", :alt=> "") %>
  </div>
  <table class="table d-flex justify-content-center">
    <tbody>
      <tr>
        <td>Book Title:</td>
        <td>
          <%= @book.book_title %>
            <%= f.hidden_field :book_id, value: @book[:id] %>
        </td>
      </tr>
        <td>Quantity:</td>
        <td>
          <%= @quantity %>
            <%= f.hidden_field :quantity, value: @quantity %>
        </td>
      </tr>
      <tr>
        <td>Total Amount:</td>
        <td>
          <%= @total_amount %>
            <span> Â¥ </span><%= f.hidden_field :total_amount, value: @total_amount %>
        </td>
      </tr>
      <%= f.hidden_field :delivery_time, value: @delivery_time %>
      <tr>
        <td>Payment method:</td>
        <td><%= f.select :payment, ['Debit Card', 'Credit Card', 'Mobile payment', 'Bank transfer'] %></td>
      </tr>
    </tbody>
  </table>
  <div class="d-flex justify-content-center m-3">
    <%= link_to "Cancle", root_path, class: "btn btn-primary mx-3" %>
    <%= f.submit "Go to checkout" , class: "btn btn-primary" %>
  </div>
  <% end %>